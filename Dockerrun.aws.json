{
	"AWSEBDockerrunVersion": 2,
	"containerDefinitions": [{
			"name": "client",
			"image": "susannit/multi-client",
			"hostname": "client",
			"essential": false,
			"memory": 128,
			"command" : [
			       "/bin/bash"
			      ]
		},
		{
			"name": "server",
			"image": "susannit/multi-server",
			"hostname": "api",
			"essential": false,
			"memory": 128,
			"command" : [
			       "/bin/bash"
			      ]
		},
		{
			"name": "worker",
			"image": "susannit/multi-worker",
			"hostname": "worker",
			"essential": false,
			"memory": 128,
			"command" : [
			       "/bin/bash"
			      ]
		},
		{
			"name": "nginx",
			"image": "susannit/multi-nginx",
			"hostname": "nginx",
			"essential": true,
			"portMappings": [{
				"hostPort": 80,
				"containerPort": 80
			}],
			"links": ["client", "server"],
			"memory": 128,
			"command" : [
			       "/bin/bash"
			      ]
		}
	]
}
